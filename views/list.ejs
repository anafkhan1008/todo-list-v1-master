<%- include("header") -%>

<body>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% for(var i = 0; i < listItems.length; i++){ %>
      <form action="/delete" method="post">
        <div class="item">
      <input type="checkbox" name="item_id"  value="<%= listItems[i]._id %>" onchange="this.form.submit()">
      <p>
        <%= listItems[i].name %>
      </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
      </form>
    
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTodo" placeholder="New Item" autocomplete="off">
      <button type="submit" name="listName" value=<%= listTitle %>>+</button>
    </form>
  </div>

</body>

<%- include("footer") -%>